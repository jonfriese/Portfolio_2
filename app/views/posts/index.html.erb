<h1>Blog</h1>

<table>
  <tr>
    <th>Title</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
<% @posts.each do |post| %>
  <tr id="<%= dom_id(post) %>">
    <th><%= post.title %></th>
    <td><%= link_to 'View Post', post, class: "btn" %></td>
    <% if policy(post).update? %>
      <td>
        <%= link_to 'Edit', edit_post_path(post), class: "btn" %>
      </td>
      <td>
        <%= button_to 'Publish', post_path(post, post: { published: true }),
          method: :put, class: "btn btn-default" %>
      </td>
    <% end %>
    <% if policy(post).destroy? %>
      <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } , class: "btn btn-danger" %></td>
    <% end %>
  </tr>
<% end %>
</table>

<br />

<% if policy(Post).create? %>
<%= link_to 'New Post', new_post_path, class: "btn" %>
<% end %>



